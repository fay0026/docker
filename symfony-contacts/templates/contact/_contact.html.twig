{% extends 'base.html.twig' %}

{% block title %}Liste des contacts{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <h1> Liste des contacts : </h1>
    <h4>
        <ul>
            {% for contact in contact_list %}
                <li class="contacts">
                    <a href="{{ path('app_contact_show', {id: contact.id}) }}" class="select_contact">
                        <span class="lastname">{{ contact.lastname }}</span>,
                        <span class="firstname">{{ contact.firstname}}</span>
                        {% if show_category ?? true and contact.category %}
                            <a class="nav-link" href={{ path('app_category_show', {'id': contact.category.id })}}>
                                <span class="badge bg-secondary">
                                <span class="Cat"> {{ contact.category.name}} </span> </span> </a>
                        {% endif %}
                         </a> </li>
            {% endfor %}
        </ul>
    </h4>
{% endblock %}
